<Window x:Class="labpt8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labpt8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="App">
                <MenuItem Header="Generate data" Click="GenerateData"/>
                <MenuItem Header="Add Person" Click="AddPerson"/>
                <MenuItem Header="Exit" Click="Exit"/>
                <MenuItem Header="Querry one" Click="Q1"/>
                <MenuItem Header="Querry two" Click="Q2"/>
                <MenuItem Header="Serialize To XML" Click="SerializeToXML" Tag="data.xml"/>
                <MenuItem Header="Deserialize From XML" Click="DeserializeFromXML" Tag="data.xml"/>
                <MenuItem Header="Xpath" Click="XpathExp" Tag="data.xml"/>
                <MenuItem Header="DHTP" Click="DHTP"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="personListBox" Grid.Column="0" Margin="5" FontSize="16"
                     SelectionChanged="PersonSelected" />
            
            <ScrollViewer Grid.Column="1" Margin="5">
                <TextBlock x:Name="descriptionText" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
