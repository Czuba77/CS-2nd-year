<Window x:Class="labpt8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:labpt8"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Lab 8+" Height="900" Width="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- pasek przycisków -->
            <RowDefinition Height="*"/>
            <!-- reszta okna -->
        </Grid.RowDefinitions>
        <!-- Pasek przycisków -->
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <TextBlock Text="Szukaj po:" Margin="0,0,4,0"/>
                <ComboBox  x:Name="propertyBox"
                           MinWidth="130"
                           IsEditable="False"
                           DropDownOpened="PropertyBox_DropDownOpened"
                           KeyDown="PropertyBox_KeyDown"/>
                <TextBlock Text="wartość:" Margin="8,0,4,0"/>
                <TextBox   x:Name="valueBox"
                           Width="160"
                           KeyDown="ValueBox_KeyDown"/>
                <Button    Content="Szukaj"
                           Click="DoSearch"
                           Margin="6,0,0,0"/>
                <Button    Content="Wyczyść"
                           Click="ClearSearch"
                           Margin="4,0,0,0"/>
            </ToolBar>
        </ToolBarTray>
        
        <StackPanel Orientation="Horizontal" Margin="0 40 0 8">
            <Button Content="Generuj 100" Click="GenerateData"/>
            <Button Content="Dodaj"   Click="AddPerson" Margin="6 0 0 0"/>
            <Button Content="Usuń"    Click="DeletePerson" Margin="6 0 0 0"/>
            <Button Content="Q1"      Click="Q1" Margin="25 0 0 0"/>
            <Button Content="Q2"      Click="Q2" Margin="6 0 0 0"/>
            <Label Content="Szukaj:" Margin="25 0 4 0"/>
            <TextBox  x:Name="searchBox" Width="140"
              KeyUp="SearchBox_KeyUp"/>
            <Button   Content="Wyczyść"
              Click="ClearSearch"
              Margin="4 0 0 0"/>
            <Button Content="Sortuj po Number ⇑"
            Click="SortAscending" Margin="6 0 0 0"/>
            <Button Content="Sortuj po Number ⇓"
            Click="SortDescending" Margin="6 0 0 0"/>
            <!-- … menu lub inne istniejące przyciski … -->
        </StackPanel>

        <!-- Dane -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- DataGrid -->
                <ColumnDefinition Width="*"/>
                <!-- opis lub panel boczny -->
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="peopleGrid"
                      ItemsSource="{Binding People}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      SelectionChanged="PersonSelected">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"       Binding="{Binding ID}"       IsReadOnly="True"/>
                    <DataGridTextColumn Header="Number"   Binding="{Binding Number}"/>
                    <DataGridTextColumn Header="Name"     Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Surname"  Binding="{Binding Surname}"/>
                    <DataGridComboBoxColumn Header="Zodiac"
                                            SelectedItemBinding="{Binding Zs}"
                                            ItemsSource="{Binding Source={StaticResource ZodiacValues}}"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock x:Name="descriptionText"
                       Grid.Column="1" Margin="8,0,0,0"
                       TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Window>